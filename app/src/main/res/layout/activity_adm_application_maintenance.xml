<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdmApplicationMaintenance">

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="222dp"
        android:layout_height="82dp"
        android:layout_marginTop="129dp"
        android:text="@string/btnAppResetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnContactSupport"
        android:layout_width="212dp"
        android:layout_height="71dp"
        android:layout_marginTop="70dp"
        android:text="@string/btnAppContactSupport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResetPassword" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="218dp"
        android:layout_height="64dp"
        android:layout_marginTop="70dp"
        android:text="@string/btnAppHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContactSupport" />
</androidx.constraintlayout.widget.ConstraintLayout>