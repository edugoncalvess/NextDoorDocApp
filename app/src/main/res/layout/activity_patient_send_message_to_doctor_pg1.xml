<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientSendMessageToDoctorPg1">

    <TextView
        android:id="@+id/txtPatMessageLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="338dp"
        android:layout_marginRight="338dp"
        android:text="@string/txtPatMessageLbl"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPatMessage"
        android:layout_width="372dp"
        android:layout_height="242dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/txtEditPatMessageHint"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPatMessageLbl" />

    <TextView
        android:id="@+id/txtPatAmountToPayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="@string/txtPatAmountToPayLabel"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txtPatDollarSign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPatMessage" />

    <TextView
        android:id="@+id/txtPatDollarSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="@string/txtPatDollarSign"
        android:textColor="#1C1C1C"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txtPatAmountToPay"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/txtPatAmountToPayLabel"
        app:layout_constraintTop_toBottomOf="@+id/editTextPatMessage" />

    <TextView
        android:id="@+id/txtPatAmountToPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="28dp"
        android:textColor="#1C1C1C"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txtPatDollarSign"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtPatAmountToPayLabel"
        app:layout_constraintTop_toBottomOf="@+id/editTextPatMessage" />

    <Button
        android:id="@+id/btnPatSendMessage"
        android:layout_width="371dp"
        android:layout_height="73dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/btnPatSendMessageAndPay"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPatAmountToPayLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>